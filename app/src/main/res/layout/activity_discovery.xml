<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background_login"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_manu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"

            android:src="@drawable/Category" />

        <EditText
            android:id="@+id/etSousuo"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/edittext_normal"
            android:paddingLeft="20dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/ivsousuo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ssdk_country_search_icon" />

    </LinearLayout>

    <com.youth.banner.Banner xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/icon_discovery_category_reviews_logo" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_discovery_group_reviews_logo" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_discovery_top_logo" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_discovery_category_reviews_logo" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_discovery_top_logo" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_discovery_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:divider="@null"
        android:dividerHeight="0dp">

    </ListView>

</LinearLayout>
